@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        display: flex;
        flex-direction: row;
        height: 100vh;
    }

    .sidebar {
        background-color: #3C3B54;
        width: 200px;
        padding: 15px;
    }

    .content {
        flex: 1;
        padding: 20px;
    }

    .nav-link {
        color: white;
    }

    .nav-link:hover {
        text-decoration: underline;
    }
</style>
